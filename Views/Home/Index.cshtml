@{
    ViewData["Title"] = "RSS Feed Reader";
}

<h1>Enter RSS Feed URL</h1>

@if (ViewBag.Error != null)
{
    <div style="color: red;">@ViewBag.Error</div>
}

<form method="post" action="/Home/Index">
    <label for="rssUrl">RSS Feed URL:</label>
    <input type="text" id="rssUrl" name="rssUrl" placeholder="Enter RSS feed URL" required />
    <button type="submit">Fetch Feed</button>
</form>